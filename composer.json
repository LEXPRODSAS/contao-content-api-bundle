{
  "name": "dieschittigs/contao-content-api-bundle",
  "description": "Access Contao content via an easy to use JSON-API",
  "type": "contao-bundle",
  "keywords": [
    "contao",
    "api",
    "bundle",
    "json"
  ],
  "require": {
    "php": "^7.2",
    "contao/core-bundle": "^4.13.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Tobias Duehr",
      "email": "tobias@dieschittigs.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "LexprodSas\\ContaoContentApiBundle\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/"
    ]
  },
  "extra": {
    "contao-manager-plugin": "LexprodSas\\ContaoContentApiBundle\\ContaoManagerPlugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "ocramius/package-versions": true
    }
  }
}
